---
import '../styles/global.css';

const base = import.meta.env.BASE_URL;
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href={`${base}favicon.svg`} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Sugiere funciones para BrukMap - Queremos saber que te gustaria ver en la app" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Montserrat:wght@700;800;900&display=swap" rel="stylesheet" />
    <title>Pronto - BrukMap</title>
  </head>
  <body class="min-h-screen bg-bg-primary text-text-primary">
    <!-- Navigation -->
    <nav class="fixed top-4 left-1/2 -translate-x-1/2 z-50 w-[calc(100%-2rem)] max-w-4xl">
      <div class="bg-bg-elevated/90 backdrop-blur-lg border border-border rounded-2xl px-4 sm:px-6 py-3 shadow-lg shadow-black/20">
        <div class="flex items-center justify-between">
          <a href={base} class="flex items-center gap-2">
            <div class="flex items-center gap-2">
              <img src={`${base}logo-icon.svg`} alt="" class="h-7 w-auto object-contain" />
              <span class="font-black text-white leading-none">Bruk<span class="font-black leading-none" style="color: #1ceb23">Map</span></span>
            </div>
          </a>
          <div class="flex items-center gap-4">
            <a href={base} class="text-text-secondary hover:text-accent transition-colors text-sm" data-i18n="back_home">
              Volver al inicio
            </a>
            <button id="lang-toggle" class="text-text-secondary hover:text-accent transition-colors text-sm font-medium px-2 py-1 rounded-lg hover:bg-accent/10">
              EN
            </button>
          </div>
        </div>
      </div>
    </nav>

    <!-- Content -->
    <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 py-32">
      <div class="w-full max-w-md">
        <div class="text-center mb-8">
          <div class="w-16 h-16 mx-auto mb-5 rounded-2xl bg-accent/20 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
            </svg>
          </div>
          <h1 class="text-3xl sm:text-4xl font-black mb-3">
            <span data-i18n="pronto_title_1">Que te gustaria</span> <span class="text-accent" data-i18n="pronto_title_2">ver</span>?
          </h1>
          <p class="text-text-secondary" data-i18n="pronto_desc">
            Envia tu sugerencia de forma anonima.
          </p>
        </div>

        <div id="form-container">
          <form id="suggestion-form" class="space-y-4">
            <input type="hidden" name="access_key" value="d30b438e-554c-429f-a263-6039e35959d1" />
            <input type="hidden" name="subject" value="Sugerencia anonima - BrukMap" />
            <input type="hidden" name="from_name" value="BrukMap Sugerencias" />

            <textarea
              id="suggestion"
              name="suggestion"
              required
              rows="4"
              placeholder="Me gustaria que BrukMap tuviera..."
              data-i18n-placeholder="pronto_placeholder"
              class="w-full px-4 py-3 bg-bg-secondary border border-border rounded-xl focus:border-accent focus:outline-none focus:ring-1 focus:ring-accent transition-colors placeholder:text-text-tertiary resize-none"
            ></textarea>

            <button
              type="submit"
              id="submit-btn"
              class="w-full py-3 bg-accent text-bg-primary font-bold rounded-xl hover:bg-accent-secondary transition-all flex items-center justify-center gap-2"
            >
              <span id="btn-text" data-i18n="pronto_send">Enviar</span>
              <svg id="btn-spinner" class="hidden w-5 h-5 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </form>
        </div>

        <!-- Success Message -->
        <div id="success-message" class="hidden text-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-success/20 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2" data-i18n="pronto_success_title">Gracias!</h3>
          <p class="text-text-secondary text-sm mb-4" data-i18n="pronto_success_desc">Tu sugerencia fue enviada.</p>
          <button id="send-another" class="text-accent hover:underline text-sm font-medium" data-i18n="pronto_send_another">
            Enviar otra
          </button>
        </div>

        <!-- Error Message -->
        <div id="error-message" class="hidden text-center">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-error/20 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="w-7 h-7 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
              <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </div>
          <h3 class="text-lg font-bold mb-2">Error</h3>
          <p class="text-text-secondary text-sm mb-4" data-i18n="pronto_error_desc">No se pudo enviar. Intenta de nuevo.</p>
          <button id="retry-btn" class="text-accent hover:underline text-sm font-medium" data-i18n="pronto_retry">
            Reintentar
          </button>
        </div>
      </div>
    </main>

    <!-- Footer -->
    <footer class="py-8 bg-bg-secondary border-t border-border">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-text-tertiary text-sm">
        <p>&copy; <span id="current-year"></span> BrukMap. <span data-i18n="footer_rights">Todos los derechos reservados.</span></p>
      </div>
    </footer>

    <script>
      // i18n System
      const translations = {
        es: {
          back_home: 'Volver al inicio',
          pronto_title_1: 'Que te gustaria',
          pronto_title_2: 'ver',
          pronto_desc: 'Envia tu sugerencia de forma anonima.',
          pronto_placeholder: 'Me gustaria que BrukMap tuviera...',
          pronto_send: 'Enviar',
          pronto_sending: 'Enviando...',
          pronto_success_title: 'Gracias!',
          pronto_success_desc: 'Tu sugerencia fue enviada.',
          pronto_send_another: 'Enviar otra',
          pronto_error_desc: 'No se pudo enviar. Intenta de nuevo.',
          pronto_retry: 'Reintentar',
          footer_rights: 'Todos los derechos reservados.'
        },
        en: {
          back_home: 'Back to home',
          pronto_title_1: 'What would you like to',
          pronto_title_2: 'see',
          pronto_desc: 'Send your suggestion anonymously.',
          pronto_placeholder: 'I would like BrukMap to have...',
          pronto_send: 'Send',
          pronto_sending: 'Sending...',
          pronto_success_title: 'Thanks!',
          pronto_success_desc: 'Your suggestion was sent.',
          pronto_send_another: 'Send another',
          pronto_error_desc: 'Could not send. Try again.',
          pronto_retry: 'Retry',
          footer_rights: 'All rights reserved.'
        }
      };

      let currentLang = 'es';

      function detectLanguage() {
        const saved = localStorage.getItem('brukmap-lang');
        if (saved && (saved === 'es' || saved === 'en')) return saved;
        const browserLang = navigator.language || navigator.userLanguage;
        return browserLang.startsWith('es') ? 'es' : 'en';
      }

      function applyTranslations(lang) {
        currentLang = lang;
        document.documentElement.lang = lang;
        localStorage.setItem('brukmap-lang', lang);

        document.querySelectorAll('[data-i18n]').forEach(el => {
          const key = el.getAttribute('data-i18n');
          if (translations[lang][key]) {
            el.textContent = translations[lang][key];
          }
        });

        document.querySelectorAll('[data-i18n-placeholder]').forEach(el => {
          const key = el.getAttribute('data-i18n-placeholder');
          if (translations[lang][key]) {
            el.placeholder = translations[lang][key];
          }
        });

        // Update toggle button
        const toggleText = lang === 'es' ? 'EN' : 'ES';
        document.getElementById('lang-toggle').textContent = toggleText;
      }

      function toggleLanguage() {
        const newLang = currentLang === 'es' ? 'en' : 'es';
        applyTranslations(newLang);
      }

      // Initialize
      document.addEventListener('DOMContentLoaded', () => {
        const detectedLang = detectLanguage();
        applyTranslations(detectedLang);

        document.getElementById('lang-toggle').addEventListener('click', toggleLanguage);
      });
    </script>

    <script>
      document.getElementById('current-year').textContent = new Date().getFullYear();

      const form = document.getElementById('suggestion-form');
      const formContainer = document.getElementById('form-container');
      const successMessage = document.getElementById('success-message');
      const errorMessage = document.getElementById('error-message');
      const submitBtn = document.getElementById('submit-btn');
      const btnText = document.getElementById('btn-text');
      const btnSpinner = document.getElementById('btn-spinner');
      const sendAnother = document.getElementById('send-another');
      const retryBtn = document.getElementById('retry-btn');

      form.addEventListener('submit', async (e) => {
        e.preventDefault();

        const currentLang = localStorage.getItem('brukmap-lang') || 'es';
        const sendingText = currentLang === 'es' ? 'Enviando...' : 'Sending...';
        const sendText = currentLang === 'es' ? 'Enviar' : 'Send';

        btnText.textContent = sendingText;
        btnSpinner.classList.remove('hidden');
        submitBtn.disabled = true;

        const formData = new FormData(form);

        try {
          const response = await fetch('https://api.web3forms.com/submit', {
            method: 'POST',
            body: formData
          });

          const data = await response.json();

          if (data.success) {
            formContainer.classList.add('hidden');
            successMessage.classList.remove('hidden');
          } else {
            throw new Error('Form submission failed');
          }
        } catch (error) {
          formContainer.classList.add('hidden');
          errorMessage.classList.remove('hidden');
        } finally {
          btnText.textContent = sendText;
          btnSpinner.classList.add('hidden');
          submitBtn.disabled = false;
        }
      });

      sendAnother.addEventListener('click', () => {
        form.reset();
        formContainer.classList.remove('hidden');
        successMessage.classList.add('hidden');
      });

      retryBtn.addEventListener('click', () => {
        formContainer.classList.remove('hidden');
        errorMessage.classList.add('hidden');
      });
    </script>
  </body>
</html>
