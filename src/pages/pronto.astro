        wlModal!.classList.add('hidden');
        wlModal!.classList.remove('flex');
        document.body.style.overflow = '';
        setTimeout(() => {
          wlFormContainer.classList.remove('hidden');
          wlSuccessMessage.classList.add('hidden');
          wlErrorMessage.classList.add('hidden');
          wlForm.reset();
        }, 300);
      }

      wlCloseBtn!.addEventListener('click', closeWlModal);
      wlBackdrop!.addEventListener('click', closeWlModal);
      wlCloseSuccess!.addEventListener('click', closeWlModal);

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !wlModal!.classList.contains('hidden')) {
          closeWlModal();
        }
      });

      wlRetryBtn!.addEventListener('click', () => {
        wlErrorMessage.classList.add('hidden');
        wlFormContainer.classList.remove('hidden');
      });

      wlForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const lang = localStorage.getItem('brukmap-lang') || 'es';
        wlBtnText.textContent = lang === 'es' ? 'Enviando...' : 'Sending...';
