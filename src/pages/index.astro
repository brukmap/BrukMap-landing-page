    <script>
      import * as THREE from 'three';
      import { GLTFLoader } from 'three/addons/loaders/GLTFLoader.js';

      (function () {
        const canvas = document.getElementById('phone-3d') as HTMLCanvasElement;
        console.log('Canvas element:', canvas);
        if (!canvas) return;

        const width = canvas.clientWidth || 350;
        const height = canvas.clientHeight || 580;
        console.log('Canvas size:', width, height);

        const renderer = new THREE.WebGLRenderer({ canvas, alpha: true, antialias: true });
        renderer.setSize(width, height);
        renderer.setPixelRatio(Math.min(window.devicePixelRatio, 2));
        renderer.toneMapping = THREE.ACESFilmicToneMapping;
        renderer.toneMappingExposure = 1.2;

        const scene = new THREE.Scene();
        const camera = new THREE.PerspectiveCamera(35, width / height, 0.001, 1000);
        camera.position.set(0, 0, 5);

        // Lighting
        const ambient = new THREE.AmbientLight(0xffffff, 1.0);
        scene.add(ambient);
        const dirLight = new THREE.DirectionalLight(0xffffff, 1.5);
        dirLight.position.set(2, 3, 4);
        scene.add(dirLight);
        const backLight = new THREE.DirectionalLight(0xffffff, 0.5);
        backLight.position.set(-2, -1, -3);
        scene.add(backLight);
        const greenLight = new THREE.PointLight(0x1ceb23, 1.0, 10);
        greenLight.position.set(-0.5, -0.5, 1);
        scene.add(greenLight);

        // Mouse tracking
        const maxAngle = Math.PI / 12;
        let tx = 0, ty = 0, rx = 0, ry = 0;
        const start = performance.now();

        document.addEventListener('mousemove', (e) => {
          const nx = (e.clientX / window.innerWidth) * 2 - 1;
          const ny = (e.clientY / window.innerHeight) * 2 - 1;
          tx = ny * maxAngle;
          ty = nx * maxAngle;
        });

        // Load model
        let phoneModel: THREE.Group | null = null;
        const loader = new GLTFLoader();
        const textureLoader = new THREE.TextureLoader();
        
        // Load screen texture
        const screenTexture = textureLoader.load(`${canvas.dataset.base || '/'}ùëâùêºùê∂ùêæ.jpeg`, (texture) => {
          texture.flipY = true;
          texture.needsUpdate = true;
        });
        
        // Environment map for PBR materials
        const pmremGenerator = new THREE.PMREMGenerator(renderer);
        const envScene = new THREE.Scene();
        envScene.background = new THREE.Color(0x222222);
        const envMap = pmremGenerator.fromScene(envScene).texture;
        scene.environment = envMap;
        pmremGenerator.dispose();

        const basePath = canvas.dataset.base || '/';
        loader.load(`${basePath}samsung_galaxy_s21_ultra.glb`, (gltf) => {
          phoneModel = gltf.scene;

          // Debug: log all children
          let meshCount = 0;
          phoneModel.traverse((child) => {
            console.log('Child:', child.type, child.name, child.visible);
            if ((child as THREE.Mesh).isMesh) {
              meshCount++;
              const mesh = child as THREE.Mesh;
              mesh.visible = true;
              const materials = Array.isArray(mesh.material) ? mesh.material : [mesh.material];
              materials.forEach((mat: any, i: number) => {
                console.log(`  Material ${i}:`, mat.type, 'color:', mat.color, 'opacity:', mat.opacity, 'transparent:', mat.transparent, 'side:', mat.side);
                
                // Check if this is the screen mesh (by name or material properties)
                const isScreen = child.name.toLowerCase().includes('screen') || 
                                child.name.toLowerCase().includes('display') ||
                                child.name.toLowerCase().includes('glass') ||
                                (mat.emissive && mat.emissive.r > 0.1);
                
                if (isScreen) {
                  // Apply screen texture
                  mat.map = screenTexture;
                  mat.emissiveMap = screenTexture;
                  mat.emissive = new THREE.Color(0xffffff);
                  mat.emissiveIntensity = 1.0;
                  console.log('Applied screen texture to:', child.name);
                }
                
                mat.side = THREE.DoubleSide;
                mat.transparent = false;
                mat.opacity = 1;
                mat.depthWrite = true;
                mat.depthTest = true;
                if (mat.envMap !== undefined) {
                  mat.envMap = envMap;
                  mat.envMapIntensity = 1.5;
                }
                mat.needsUpdate = true;
              });
            }
          });
          console.log('Total meshes:', meshCount);

          // Center and scale to fit view
          const box = new THREE.Box3().setFromObject(phoneModel);
          const size = box.getSize(new THREE.Vector3());
          const center = box.getCenter(new THREE.Vector3());
          console.log('Bounding box size:', size, 'center:', center);

          phoneModel.position.sub(center);
          phoneModel.rotation.y = Math.PI; // Flip to show screen
          const maxDim = Math.max(size.x, size.y, size.z);
          const desiredHeight = 4;
          const scale = desiredHeight / maxDim;
          phoneModel.scale.setScalar(scale);
          scene.add(phoneModel);
          console.log('Applied scale:', scale);
        }, undefined, (err) => {
          console.error('GLB load error:', err);
        });

        function animate() {
          requestAnimationFrame(animate);
          if (phoneModel) {
            rx += (tx - rx) * 0.08;
            ry += (ty - ry) * 0.08;
            const floatY = Math.sin((performance.now() - start) / 1000) * 0.05;
            phoneModel.rotation.x = rx;
            phoneModel.rotation.y = Math.PI + ry;
            phoneModel.position.y = floatY;
          }
          renderer.render(scene, camera);
        }
        animate();

        window.addEventListener('resize', () => {
          const w = canvas.clientWidth;
          const h = canvas.clientHeight;
          renderer.setSize(w, h);
          camera.aspect = w / h;
          camera.updateProjectionMatrix();
        });
      })();
    </script>

