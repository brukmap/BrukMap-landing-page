          <form id="waitlist-form" class="space-y-4">
            <input type="hidden" name="access_key" value="d30b438e-554c-429f-a263-6039e35959d1" />
            <input type="hidden" name="subject" value="Nueva suscripcion - BrukMap Waitlist" />
            <input type="hidden" name="from_name" value="BrukMap Waitlist" />
            <input type="hidden" id="platform-input" name="platform" value="iOS" />

