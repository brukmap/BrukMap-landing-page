        </div>
      </div>
      <!-- Pinterest-style Image Grid -->
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-12 sm:mt-16">
        <div class="columns-2 sm:columns-3 lg:columns-5 gap-3 sm:gap-4">
          <img src={`${base}expamples/descarga1.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/a.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga2.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/skatepark aesthetic.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga3.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga6.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga4.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/b.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga5.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga7.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/photograph _ Jake Inez.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga8.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga9.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga10.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
          <img src={`${base}expamples/descarga11.jpeg`} alt="" class="w-full mb-3 sm:mb-4 rounded-xl border border-border object-cover scroll-animate scroll-fade-up" loading="lazy" />
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-16 sm:py-24 lg:py-16 xl:py-20 2xl:py-24 bg-bg-secondary overflow-hidden">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-10 sm:mb-16 scroll-animate scroll-fade-up">
          <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-4xl xl:text-5xl font-black mb-3 sm:mb-4">
            <span data-i18n="features_title_1">Todo lo que</span> <span class="text-accent" data-i18n="features_title_2">necesitas</span>
          </h2>
          <p class="text-text-secondary text-base sm:text-lg lg:text-base xl:text-lg max-w-2xl mx-auto px-2 sm:px-0" data-i18n="features_description">
            Herramientas pensadas para exploradores que buscan experiencias autenticas.
          </p>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          <div class="p-6 lg:p-5 xl:p-6 bg-bg-elevated rounded-2xl border border-border hover:border-accent/50 transition-all group scroll-animate scroll-fade-up stagger-1 hover-lift card-glow-border">
